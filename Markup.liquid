<div class="screen">
  <div class="view view--full">
    <div class="layout">
      <div class="columns">
        <div class="column">
          <div class="markdown">
            <span class="title">London Transport Status</span>
            <div class="content">
              {% for line in data %}
                <p>
                  <strong>{{ line.name }}:</strong>
                  {% if line.lineStatuses[0].statusSeverityDescription != "Good Service" %}
                    <span class="disrupted">! {{ line.lineStatuses[0].statusSeverityDescription | upcase }} !</span>
                  {% else %}
                    {{ line.lineStatuses[0].statusSeverityDescription }}
                  {% endif %}
                </p>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .disrupted {
    font-weight: bold;
    text-transform: uppercase;
    border: 1px solid black;
    padding: 2px 4px;
  }
</style>

