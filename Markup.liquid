<div class="screen">
  <div class="view view--full">
    <div class="layout">
      <div class="columns">
        <div class="column">
          <div class="markdown">
            <span class="title">London Transport Status</span>
            <div class="content">
              {% for line in data %}
                <div class="line-status">
                  <span class="line-name">{{ line.name }}:</span>
                  {% if line.lineStatuses[0].statusSeverityDescription != "Good Service" %}
                    <span class="status disrupted">{{ line.lineStatuses[0].statusSeverityDescription }}</span>
                  {% else %}
                    <span class="status">{{ line.lineStatuses[0].statusSeverityDescription }}</span>
                  {% endif %}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .line-status {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 4px;
  }
  .line-name {
    font-weight: bold;
    flex-shrink: 0;
    margin-right: 8px;
  }
  .status {
    text-align: right;
  }
  .disrupted {
    background-color: black;
    color: white;
    font-weight: bold;
    padding: 2px 4px;
    border: 1px solid white;
  }
</style>

