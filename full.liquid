<div class="screen">
  <div class="view view--full">
    <div class="layout">
      <div class="column status">
        <div class="content">
          {% if data and data != empty %}
          {% for line in data %}
          <div class="line-status">
            <span class="line-name">{{ line.name }}</span>
            <span class="status {% if line.lineStatuses[0].statusSeverityDescription != 'Good Service' %}disrupted{% else %}good{% endif %}">
              {{ line.lineStatuses[0].statusSeverityDescription }}
            </span>
          </div>
          {% endfor %}
          {% else %}
          <div class="error-message">No data available.</div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="title_bar">
      <img class="image" src="https://upload.wikimedia.org/wikipedia/commons/4/41/Underground.svg" width="30" />
      <span class="title">TfL Status</span>
    </div>
  </div>
</div>


<style>
  .title_bar {
    display: flex;
    align-items: center;
    padding: 1px 10px;
    border-bottom: 1px solid black;
  }
  .title_bar .image {
    margin-right: 10px;
  }
  .title_bar .title {
    font-weight: bold;
    font-size: 16px;
  }
  .screen {
    font-size: 11px;
    line-height: 1.0;
    padding: 0;
  }
  .layout {
    display: flex;
    align-items: stretch;
  }
  .column.status {
    flex: 1;
    width: 100%;
  }
  .content {
    max-height: 450px;
    overflow-y: auto;
    padding: 0;
  }
  .line-status {
    display: flex;
    align-items: left;
    width: 80%;
    padding: 1px 0;
  }
  .line-name {
    flex-grow: 1;
    text-align: right;
    font-weight: bold;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 14px;
    padding-right: 10px;
  }
  .status {
    text-align: left;
    font-size: 14px;
    font-weight: bold;
    white-space: nowrap;
    margin-left: auto;
  }
  .disrupted {
    text-align: left;
    background-color: black;
    color: white;
    padding: 1 2px;
    display: inline-block;
  }
  .good {
    color: black;
  }
  .error-message {
    font-style: italic;
    margin-top: 2px;
  }
</style>